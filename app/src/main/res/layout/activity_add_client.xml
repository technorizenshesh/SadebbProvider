<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".act.activity.AddUserActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/RR_toolbaar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp">

                <ImageView
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/backnew"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/iv_Back"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp">

                </ImageView>

                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:id="@+id/sihn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/add_client"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_main"
                        android:layout_width="160dp"
                        android:layout_height="120dp"
                        android:layout_below="@id/RR_toolbaar"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_Profile"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/user_placeholder" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_CameraProfileEdit"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_alignRight="@+id/iv_Profile"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="24dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_camera_with_bg"
                            android:backgroundTint="@color/purple_200"
                            android:tint="@color/white" />

                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/personal_information"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/full_name"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_stroke_blue">


                    </LinearLayout>

                    <EditText
                        android:maxLength="30"
                        android:id="@+id/et_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/please_enter_user_name"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/user_email"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:maxLength="30"
                        android:id="@+id/et_Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/please_enter_user_email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/mobile_number"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                            android:id="@+id/ccp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:ccp_defaultNameCode="57"
                            tools:ignore="MissingClass" />


                        <EditText
                            android:id="@+id/et_No"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="@string/enter_mobile_no"
                            android:inputType="number"
                            android:maxLength="12"
                            android:padding="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_13sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray" />


                    <LinearLayout
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/gray"
                            android:text="@string/gender"/>

                        <RadioGroup
                            android:id="@+id/rg_Gender"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:checked="true"
                                android:id="@+id/rb_male"
                                android:text="@string/male"
                                android:buttonTint="@color/blue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <RadioButton
                                android:buttonTint="@color/blue"
                                android:id="@+id/rb_female"
                                android:text="@string/female"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </RadioGroup>




                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/financial_data"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Ruc / Nit"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:maxLength="30"
                        android:id="@+id/et_ruc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/enter_ruc"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/cient_code"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:maxLength="30"
                        android:id="@+id/et_ClientCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/enter"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/convenio"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:maxLength="30"
                        android:id="@+id/et_Agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/enter"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/descuento"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:maxLength="30"
                        android:id="@+id/et_Discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/enter"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/observaciones"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:maxLength="30"
                        android:id="@+id/et_Observation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="@string/enter"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray" />

                    <TextView
                        android:layout_alignParentBottom="true"
                        android:layout_marginVertical="@dimen/_16sdp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:id="@+id/btn_Save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_blue_border"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:padding="@dimen/_12sdp"
                        android:text="@string/save"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />



                </LinearLayout>

            </ScrollView>


        </LinearLayout>


        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/loader"
            android:id="@+id/loader_layout"/>

    </RelativeLayout>
</layout>