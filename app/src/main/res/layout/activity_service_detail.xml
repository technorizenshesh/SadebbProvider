<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".act.activity.ServiceDtvailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/RR_toolbaar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_Back"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/backnew">

                </ImageView>

                <TextView
                    android:id="@+id/sihn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="@string/service_detail"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/RR_toolbaar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/RR_camera"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_170sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/whiteeditround"
                            android:elevation="@dimen/_20sdp"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/img_camera"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/camera"></ImageView>


                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="@string/service_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/edt_bg_new">

                            <TextView
                                android:id="@+id/tv_Service_Name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:maxLength="30"
                                android:padding="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />

                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="@string/service_price"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/edt_bg_new">

                            <TextView
                                android:id="@+id/tv_Service_Price"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:maxLength="30"
                                android:padding="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />

                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="@string/service_offer"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:visibility="gone"
                            android:background="@drawable/edt_bg_new">

                            <TextView
                                android:id="@+id/tv_Service_Offer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:maxLength="30"
                                android:padding="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />

                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="@string/category_name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/edt_bg_new">

                            <TextView
                                android:id="@+id/tv_Category"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:maxLength="30"
                                android:padding="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />


                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="@string/estimate_time"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/edt_bg_new">

                            <TextView
                                android:id="@+id/tv_estimate_time"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:maxLength="30"
                                android:padding="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="@string/services_time"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/edt_bg_new">

                            <TextView
                                android:id="@+id/tv_Service_Time"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:maxLength="30"
                                android:padding="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:visibility="gone"
                            android:text="@string/customization"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/edt_bg_new">

                            <TextView
                                android:id="@+id/tv_Customization"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:maxLength="30"
                                android:padding="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="@string/description"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/edt_bg_new">

                            <TextView
                                android:id="@+id/tv_Description"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="@string/all_service_users"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_AllUsers"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_below="@id/RR_toolbaar"
                            android:layout_margin="@dimen/_8sdp"
                            android:layout_weight="1" />


                        <TextView
                            android:id="@+id/tv_next"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/_20sdp"
                            android:background="@drawable/bg_blue_border"
                            android:elevation="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:padding="@dimen/_12sdp"
                            android:text="@string/back"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>

                </RelativeLayout>

            </ScrollView>

            <include
                android:id="@+id/loader_layout"
                layout="@layout/loader"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>
</layout>